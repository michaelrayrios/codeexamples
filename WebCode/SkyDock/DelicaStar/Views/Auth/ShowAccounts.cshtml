@model IEnumerable<User>

@{
	ViewData["Title"] = "Show All Accounts";
}

<br />
<h4>User Accounts</h4>
<table>
	<tr>
		<th>User Name</th>
		<th>First Name</th>
		<th>Last Name</th>
		<th>Email</th>
	</tr>
	@if (Model.Count() == 0)
	{
		<tr><td colspan="3">No User Accounts</td></tr>
	}
	else
	{
		foreach (User user in Model)
		{
			<tr>
				<td>@user.UserName</td>
				<td>@user.FirstName</td>
				<td>@user.LastName</td>
				<td>@user.Email</td>
			</tr>
		}
	}
</table>

<a asp-action="CreateAccount">Create an Account</a><br />
<a asp-action="Index">Admin Page</a>


